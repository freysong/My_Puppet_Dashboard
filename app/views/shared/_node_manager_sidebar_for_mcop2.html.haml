

.group

  - entries = NodeGroup.with_nodes_count


  .item
    - if entries.present?
      %table.main
        %thead
          %tr
            %th.name{:style => 'width: 33%;'}
              Name
            %th.description
              Description
        %tbody
          - for node_group in entries
            %tr[node_group]
              %td.name
                = link_to h(node_group.name), node_group
              %td.description
                = node_group.description
        %tfoot

    - else
      %p
        = describe_no_matches_for :groups

    %br.clear